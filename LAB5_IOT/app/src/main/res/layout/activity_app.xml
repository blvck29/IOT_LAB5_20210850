<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AppActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="60dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingTop="30dp"
            app:srcCompat="@drawable/logo_full">
        </ImageView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/darker_gray" />


    <com.app.lab5_iot.model.CircularTMB
        android:id="@+id/circularTMBProgressView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center">

    </com.app.lab5_iot.model.CircularTMB>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingHorizontal="50dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">

            <Button
                android:id="@+id/input_calorias"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Ingresar Comida"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                android:backgroundTint="#2175F3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <Button
                android:id="@+id/input_ejercicio"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Ingresar Ejercicio"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                android:backgroundTint="#2175F3"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <ImageButton
                android:id="@+id/configurar_notificaciones"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="#2175F3"
                android:src="@drawable/notifications"
                android:text="A"
                android:textSize="14sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="Comidas Frecuentes"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </TextView>

                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_borders"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Arroz con Pollo"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Porción: 250 g"
                                android:textSize="14dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calorias: 942 kcal"
                                android:textSize="14dp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/add_food1"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:text="Añadir"
                                android:textSize="14sp"
                                app:cornerRadius="10dp"
                                android:backgroundTint="#2175F3"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_borders"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Carapulcra con Sopa Seca"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Porción: 350 g"
                                android:textSize="14dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calorias: 1242 kcal"
                                android:textSize="14dp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/add_food2"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:text="Añadir"
                                android:textSize="14sp"
                                app:cornerRadius="10dp"
                                android:backgroundTint="#2175F3"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_borders"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pollo a la Brasa"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Porción: 280 g"
                                android:textSize="14dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calorias: 1062 kcal"
                                android:textSize="14dp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/add_food3"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:text="Añadir"
                                android:textSize="14sp"
                                app:cornerRadius="10dp"
                                android:backgroundTint="#2175F3"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_borders"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chaufa Aeropuerto"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Porción: 300 g"
                                android:textSize="14dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calorias: 1542 kcal"
                                android:textSize="14dp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/add_food4"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:text="Añadir"
                                android:textSize="14sp"
                                app:cornerRadius="10dp"
                                android:backgroundTint="#2175F3"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_borders"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pizza Regular"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Porción: 250 g"
                                android:textSize="14dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calorias: 966 kcal"
                                android:textSize="14dp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/add_food5"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:text="Añadir"
                                android:textSize="14sp"
                                app:cornerRadius="10dp"
                                android:backgroundTint="#2175F3"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>







</LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>